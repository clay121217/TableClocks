<resources>
    <!-- Base application theme. -->
    <style name="Theme.TableClocks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navbarBgColor</item>
        <item name="colorPrimaryVariant">@color/navbarBgColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grayTextColor</item>
        <item name="colorSecondaryVariant">@color/grayTextColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily">@font/rounded_mplus_1c_medium</item>
    </style>
</resources>